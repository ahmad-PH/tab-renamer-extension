{
    "manifest_version": 3,
    "name": "Tab Renamer",
    "version": "1.0",
    "permissions": ["tabs", "activeTab", "scripting", "storage"],
    "host_permissions": [
        "<all_urls>"
    ],

    "background": {
        "service_worker": "background.js"
    },

    "commands": {
        "open_rename_dialog": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
            "description": "Open rename dialog"
        }
    },

    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["contentScript.js"],
          "css": ["styles.css"],
          "run_at": "document_start"
        }
    ],

    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    }
  }